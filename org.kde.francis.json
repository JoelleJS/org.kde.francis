{
    "id": "org.kde.francis",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "francis",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
